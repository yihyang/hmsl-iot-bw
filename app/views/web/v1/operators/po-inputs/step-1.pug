extends ./../../../../layouts/default
include ./../../../../shared/mixins

block content
  .container
    .row
      .col
        a.btn.btn-link.my-2(href=`/operators`)
          i.fa.fa-arrow-left
          | &nbsp;Back to Home Page
    .row
      .col
        a.btn.btn-primary.my-2(href=`/operators/po-inputs/po-records/new`)
          i.fa.fa-plus-circle
          | &nbsp;Create new PO Record
    .row
      .col
        h3 Please insert PO Number
        form#form(action="/operators/po-inputs/step-2" method="POST")
          .form-group.row
            .col-md-4
              label(for="po_number") PO Number
            .col-md-8
              input.form-control(type="text" name="po_number" required="true")

          button.btn.btn-primary(type="submit") Next
