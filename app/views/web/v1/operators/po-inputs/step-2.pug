extends ./../../../../layouts/default
include ./../../../../shared/mixins

block content
  .container
    .row
      .col
        a.btn.btn-link.my-2(href=`/operators/po-inputs/step-1`)
          i.fa.fa-arrow-left
          | &nbsp;Back to Previous Step
    .row
      .col
        table.table
          tr
            th PO Number
            td= poRecord.po_number
    .row
      .col
        h2 Jobs
        table.table
          if poRecord.jobs
            for j in poRecord.jobs
              tr
                th Machine
                td= j.node.name
              tr
                th Status
                td= j.status
              tr
                th Created At
                td
                  +format_datetime(j.created_at)
              tr
                td(colspan=2)
