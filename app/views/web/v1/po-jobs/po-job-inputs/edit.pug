extends ./../../../../layouts/default
include ./../../../../shared/mixins

block content
  .container
    .row
      .col
        a.btn.btn-link.my-2(href=`/po-job/${jobInput.po_job_id}`)
          i.fa.fa-arrow-left
          | &nbsp;Back to PO Jobs Page
    .row
      .col
        h1 Edit Job Input #{jobInput.id}
        form(method="POST" action='/po-jobs/'+ jobInput.po_job_id + '/inputs/' + jobInput.id + '/update')
          .form-group.row
            .col-sm-2.col-form-label Quantity
            .col-sm-10
              input.form-control(type="number", name="quantity", value=jobInput.quantity, placeholder="quantity", step="0.001")
          button.btn.btn-primary(type="submit") Update

