extends ./../../../../layouts/default
include ./../../../../shared/mixins

block content
  .container
    .row
      .col
        a.btn.btn-link.my-2(href=`/po-job/${batch.po_job_id}`)
          i.fa.fa-arrow-left
          | &nbsp;Back to PO Jobs Page
    .row
      .col
        h1 Edit Batch #{batch.id}
        form(method="POST" action='/po-jobs/'+ batch.po_job_id + '/batches/' + batch.id + '/update')
          .form-group.row
            .col-sm-2.col-form-label Quantity
            .col-sm-10
              input.form-control(type="number", name="output_quantity", value=batch.output_quantity, placeholder="output_quantity", step="0.001")
          button.btn.btn-primary(type="submit") Update

