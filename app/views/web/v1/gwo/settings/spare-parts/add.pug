extend ./../../../../../layouts/default

block content
  .container
    .row
      .col
        a.btn.btn-link.mt-2(href="/gwo/settings/spare-parts")
          i.fa.fa-arrow-left
          | &nbsp;Back to GWO Spare Parts

    .row.text-center
      h1 Add GWO Spare Part

    .row
      .col-md-6.col-sm-12
        //- form
        form(method="POST" action='/gwo/settings/spare-parts')
          .form-group
            label(for="name") Name
            input.form-control(type="text" name="name")

          .form-group
            label(for="quantity") Quantity
            input.form-control(type="number" name="quantity")

          button.btn.btn-primary(type="submit") Save
