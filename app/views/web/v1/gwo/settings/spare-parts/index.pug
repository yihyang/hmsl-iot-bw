extend ./../../../../../layouts/default

block content
  .container
    .row
      .col
        a.btn.btn-link.mt-2(href="/gwo/settings")
          i.fa.fa-arrow-left
          | &nbsp;Back to GWO Settings
    .row.mt-5
      .col
        h1 Spare Parts
    .row
      include ./../../../../../shared/pagination
    .row
      .col
        a.btn.btn-primary.my-2(href="/gwo/settings/spare-parts/new")
          i.fa.fa-plus-circle
          | &nbsp;Add New Spare Part

    .row
      table.table
        tr
          th ID
          th Name
          th Quantity
          th Actions
        for sp in gwoSpareParts
          tr
            td= sp.id
            td= sp.name
            td= sp.quantity
            td
              a.btn.btn-link(href=`/gwo/settings/spare-parts/${sp.id}/edit`)
                i.fa.fa-pencil-square-o
                | &nbsp;Edit
