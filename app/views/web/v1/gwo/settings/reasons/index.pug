extend ./../../../../../layouts/default

block content
  .container
    .row
      .col
        a.btn.btn-link.mt-2(href="/gwo/settings")
          i.fa.fa-arrow-left
          | &nbsp;Back to GWO Settings

    .row.mt-5
      .col
        h1 Reasons
    .row
      include ./../../../../../shared/pagination
    .row
      .col
        a.btn.btn-primary.my-2(href="/gwo/settings/reasons/new")
          i.fa.fa-plus-circle
          | &nbsp;Add New Reason

    .row
      table.table
        tr
          th ID
          th Name
          th Actions
        for g in gwoReasons
          tr
            td= g.id
            td= g.name
            td
              a.btn.btn-link(href=`/gwo/settings/reasons/${g.id}/edit`)
                i.fa.fa-pencil-square-o
                | &nbsp;Edit
