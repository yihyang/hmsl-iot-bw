extends ./../../../layouts/default

block content
  .container
    .row.my-3
      .col.text-center
        h2 Register New Account

    .row
      .col-md-6.col-sm-12
        //- form
        form(method="POST")
          .form-group
            label(for="username") Username
            input.form-control(type="text" name="username" required="true")
          .form-group
            label(for="name") Name
            input.form-control(type="text" name="name" required="true")
          .form-group
            label(for="password") Password
            input.form-control(type="password" name="password" required="true")
          button.btn.btn-primary(type="submit") Save
